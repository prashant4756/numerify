<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.HomeFragment">
    <!--app:endIconDrawable="@drawable/ic_launcher_background"-->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInputField"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="@dimen/dp_0"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_16"
        android:hint="@string/enter_word_to_numerify"
        app:endIconMode="clear_text"
        app:helperText="@string/numerify_help_text"
        app:helperTextEnabled="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1" />

    </com.google.android.material.textfield.TextInputLayout>


    <TableLayout
        android:id="@+id/tableLayout"
        android:layout_width="@dimen/dp_0"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_16"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textInputField"
        android:stretchColumns="0"
        android:divider="?android:attr/listDivider"
        android:showDividers="middle"
        android:padding="4dp"
        android:background="@drawable/rectangle">

        <TableRow
            android:id="@+id/header"
            android:minHeight="24dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="3">

            <TextView
                android:id="@+id/key"
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:layout_column="0"
                android:text="@string/name"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_weight="2"
                android:textColor="@color/white"/>

            <TextView
                android:id="@+id/value"
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:layout_column="1"
                android:text="@string/value"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_weight="1"
                android:textColor="@color/white"
                />
        </TableRow>

        <TableRow
            android:minHeight="24dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="3">

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:layout_column="0"
                android:text="@string/sum_all"
                android:gravity="center"
                android:layout_weight="2"
                android:textColor="@color/white"/>

            <TextView
                android:id="@+id/textSum"
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:layout_column="1"
                tools:text="@string/value"
                android:gravity="center"
                android:layout_weight="1"
                android:textColor="@color/white"/>
        </TableRow>

        <TableRow
            android:minHeight="24dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="3">

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:layout_column="0"
                android:text="@string/square_of_sum"
                android:gravity="center"
                android:layout_weight="2"
                android:textColor="@color/white"/>

            <TextView
                android:id="@+id/textSquare"
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:layout_column="1"
                tools:text="@string/value"
                android:gravity="center"
                android:layout_weight="1"
                android:textColor="@color/white"/>
        </TableRow>

        <TableRow
            android:minHeight="24dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="3">

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:layout_column="0"
                android:text="@string/square_root_of_sum"
                android:gravity="center"
                android:layout_weight="2"
                android:textColor="@color/white"/>

            <TextView
                android:id="@+id/textSquareRoot"
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:layout_column="1"
                tools:text="@string/value"
                android:gravity="center"
                android:layout_weight="1"
                android:textColor="@color/white"/>
        </TableRow>

    </TableLayout>

</androidx.constraintlayout.widget.ConstraintLayout>